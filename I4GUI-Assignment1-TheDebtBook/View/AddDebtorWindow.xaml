<Window x:Class="I4GUI_Assignment1_TheDebtBook.View.AddDebtorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:I4GUI_Assignment1_TheDebtBook.View"
        mc:Ignorable="d"
        Title="AddDebtorWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
           
        </Grid.RowDefinitions>

    <TextBox Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Name="txb1" Text="{Binding Path=?}" />
    <TextBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Name="txb2" Text="{Binding Path=?}" />
    <Button Grid.Column="0" Grid.Row="2" Name="txb3"  Content="Save" />
    <Button Grid.Column="1" Grid.Row="2" Name="txb4"  Content="Cancel" />



</Grid>
</Window>
